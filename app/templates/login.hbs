<form {{action "authenticate" on="submit"}}>
  <label for="username">Login</label>
  {{input
    id="email"
    placeholder="Enter Login"
    value=email
  }}
  <label for="password">Password</label>
  {{input
    id="password"
    placeholder="Enter Password"
    type="password"
    value=password
  }}
  <button type="submit">Login</button>
</form>

{{#if errorMessage}}
  {{errorMessage}}
{{/if}}
