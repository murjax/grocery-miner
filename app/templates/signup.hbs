<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="col-md-12">
          {{#bs-form onSubmit=(action "submit") as |form|}}
            {{#form.group}}
              {{form.element
                id="email"
                controlType="email"
                label="Email"
                value=email
                onChange=(action "setEmail")
              }}
            {{/form.group}}
            {{#form.group}}
              {{form.element
                id="password"
                controlType="password"
                label="Password"
                value=password
                onChange=(action "setPassword")
              }}
            {{/form.group}}
            <button class="btn btn-primary submit" type="submit">Sign Up</button>
          {{/bs-form}}

          {{#if errorMessage}}
            <div class="errors">
              {{errorMessage}}
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
