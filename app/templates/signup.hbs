<form {{action "submit" on="submit"}}>
  <label for="email">Email</label>
  {{input
    id="email"
    value=email
    placeholder="enter email"
  }}

  <label for="password">Password</label>
  {{input
    id="password"
    value=password
    type="password"
    placeholder="enter password"
  }}

  <button class="submit" type="submit">Sign Up</button>
</form>

{{#if errorMessage}}
  <div class="errors">
    {{errorMessage}}
  </div>
{{/if}}
