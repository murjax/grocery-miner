{{#page-container}}
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-2">
          {{#power-select
            options=months
            selected=month
            triggerClass="month-select"
            onchange=(queue
             (action (mut month))
             (action "setFilterPurchasedInMonth")
            )
          as |month|
          }}
            {{month}}
          {{/power-select}}
        </div>
        <div class="col-md-2">
          {{#power-select
            options=years
            selected=year
            triggerClass="year-select"
            onchange=(queue
             (action (mut year))
             (action "setFilterPurchasedInMonth")
            )
          as |year|
          }}
            {{year}}
          {{/power-select}}
        </div>
      </div>
      {{basic-table columns=this.columns records=this.model}}
    </div>
  </div>
{{/page-container}}
