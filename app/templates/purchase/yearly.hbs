<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-2">
              {{#power-select
                options=years
                selected=year
                triggerClass="year-select"
                onchange=(action (mut year))
              as |year|
              }}
                {{year}}
              {{/power-select}}
            </div>
          </div>

          {{#light-table table class="table table-striped" as |t|}}
            {{t.head}}
            {{#t.body as |body|}}
              {{#body.expanded-row as |row|}}
                {{row}}
              {{/body.expanded-row}}
            {{/t.body}}
          {{/light-table}}

          <h4>Total: {{total}}</h4>
        </div>
      </div>
    </div>
  </div>
</div>
