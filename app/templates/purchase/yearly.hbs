{{#page-container}}
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-2">
          {{#power-select
            options=years
            selected=year
            triggerClass="year-select"
            onchange=(action (mut year))
          as |year|
          }}
            {{year}}
          {{/power-select}}
        </div>
        <h4>Total: {{currency-formatter total}}</h4>
        <h4 class="pl-2">Items Purchased: {{totalCount}}</h4>
      </div>

      {{basic-table table}}

      <h4>Total: {{currency-formatter total}}</h4>
      <h4>Items Purchased: {{totalCount}}</h4>
      {{simple-pagination page=page pages=totalPages}}
    </div>
  </div>
{{/page-container}}
